{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "strict": "off",
        "no-console": "off",
        "no-unused-vars": ["warn", { "vars": "all", "args": "none", "ignoreRestSiblings": false }],
        "indent": ["warn", 4],
        "linebreak-style": ["error", "windows"],
        "quotes": ["warn", "single"],
        "semi": ["error", "always"]
    }
}